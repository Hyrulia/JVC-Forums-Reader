<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:minWidth="250dp" android:layout_height="wrap_content" android:padding="10dp">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:text="@string/topicGoToPage" android:layout_height="wrap_content" android:gravity="center" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_width="wrap_content"></TextView>
        <EditText android:id="@+id/pageSelectionEditText" android:layout_height="wrap_content" android:layout_width="0dp" android:layout_marginLeft="10dp" android:layout_weight="1" android:numeric="integer" android:inputType="textShortMessage|number">
