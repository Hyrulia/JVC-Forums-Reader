    </LinearLayout>
    <Button android:id="@+id/pageSelectionGoButton" android:layout_height="wrap_content" android:text="@string/captchaButtonSubmit" android:layout_width="match_parent" android:layout_marginTop="10dp"></Button>
</LinearLayout>