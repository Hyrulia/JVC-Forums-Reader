 <ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="10dp" android:minWidth="250dp">
	<LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
	    <Button android:id="@+id/topicSearchMyTopicsButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/searchMyTopics" />
	    <EditText android:id="@+id/topicSearchEditText" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:inputType="textShortMessage">
